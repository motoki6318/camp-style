<div class="wrapper">
  <div class="side-ber">
    <%= render "side_ber" %>
  </div>
  <%= form_with model: @camp, class:'form-wrap', local: true do |f| %>
    <h1>キャンプ記録の編集</h1>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class='form'>
      <div class="camp-field">
        <%= f.label :title, "キャンプタイトル" %>
        <%= f.text_field :title, class:"input-title", placeholder: '例:年越しソロキャンプ！'%>
      </div>
      <div class="camp-field">
        <%= f.label :image, "キャンプ画像" %>
        <%= f.file_field :image, id:"item-image" %>
      </div>
      <div class="camp-field">
        <%= f.label :place, "キャンプ地" %>
        <%= f.text_field :place, class:"input-title", placeholder: '例:ふもとっぱらキャンプ場'%>
      </div>

      <div class="camp-text-field">
        <%= f.label :text, "キャンプの感想" %>
        <%= f.text_area :text, class:"input-text", placeholder: '必須ではありません。' %>
      </div>

      <div class="camp-text-field">
        <%= f.label :day, "キャンプの日付" %>
        <%= f.date_field :day %>
      </div>

    </div>
    <div class="submit-post">
      <%= f.submit "Send", class: "submit-btn" %>
    </div>
  <% end %>
</div>