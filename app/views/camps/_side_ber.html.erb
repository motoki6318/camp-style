<div class="side-bar-header">
  <div class="app-name">
    <% if user_signed_in? %>
      <%= link_to "#{current_user.nickname}", root_path, class: "post" %>
    <% else %>
      <a href="#">CAMP-STYLE</a>
    <% end %>
  </div>
</div>

<div class="user-items">
  <div class="item-btn">
    <%= link_to "+マイアイテム", new_item_path, class: "post" %>
  </div>
  <ul class="items">
    <div class="item">
      <% @items.each do |item| %>
        <li>
          <%= item.name %>
        </li>
      <% end %>
    </div>
  </ul>
</div>