<div class="info">
  <div class="left-info">
    <h2>Log in</h2>
  </div>
  <div class="right-info">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"text-field" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"text-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class:"submit" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
</div>
