
<div class="sign-up">
    <div class="left-sign-up">
      <h2>Sign up</h2>
    </div>
    <div class="right-sign-up">
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <%# <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, class:"text-field" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:"text-field" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class:"text-field" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class:"text-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"submit" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
