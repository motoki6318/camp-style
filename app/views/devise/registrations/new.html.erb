
<div class="info">
    <div class="left-info">
      <h2>Sign up</h2>
    </div>
    <div class="right-info">
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <%= render 'layouts/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, class:"text-field" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:"text-field" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class:"text-field" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class:"text-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"submit" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
